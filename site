    <script>
        const scripts = {
            afsHub: {
                loadstring: 'loadstring(game:HttpGet("https://raw.githubusercontent.com/Luvwas/Random-Stuff-Ngl/refs/heads/main/afsgeral"))()',
                source: 'https://raw.githubusercontent.com/Luvwas/Random-Stuff-Ngl/refs/heads/main/afsgeral'
            },
            lapoHub: {
                loadstring: 'loadstring(game:HttpGet("https://raw.githubusercontent.com/Luvwas/Random-Stuff-Ngl/refs/heads/main/lapohubv3"))()',
                source: 'https://raw.githubusercontent.com/Luvwas/Random-Stuff-Ngl/refs/heads/main/lapohubv3'
            },
            passiveRoller: {
                loadstring: 'loadstring(game:HttpGet("https://raw.githubusercontent.com/Luvwas/LuvwasoGoat/refs/heads/main/passiverrv2"))()',
                source: 'https://raw.githubusercontent.com/Luvwas/LuvwasoGoat/refs/heads/main/passiverrv2'
            },
            incubator: {
                loadstring: 'loadstring(game:HttpGet("https://raw.githubusercontent.com/Luvwas/Random-Stuff-Ngl/refs/heads/main/incubatorfix"))()',
                source: 'https://raw.githubusercontent.com/Luvwas/Random-Stuff-Ngl/refs/heads/main/incubatorfix'
            },
            autoGate: {
                loadstring: 'loadstring(game:HttpGet("https://raw.githubusercontent.com/Luvwas/Random-Stuff-Ngl/refs/heads/main/auotgate"))()',
                source: 'https://raw.githubusercontent.com/Luvwas/Random-Stuff-Ngl/refs/heads/main/auotgate'
            }
        };

        function showModal(modalId, scriptName) {
            const modal = document.getElementById(modalId);
            const scriptData = scripts[scriptName];
            
            if (modalId === 'loadstringModal') {
                document.getElementById('loadstringCode').textContent = scriptData.loadstring;
            } else if (modalId === 'sourceModal') {
                document.getElementById('sourceCode').textContent = scriptData.source;
            }
            
            modal.classList.add('visible');
            document.body.style.overflow = 'hidden';
        }

        function closeModal(modalId) {
            document.getElementById(modalId).classList.remove('visible');
            document.body.style.overflow = 'auto';
        }

        function copyCode(button, elementId) {
            const code = document.getElementById(elementId).textContent;
            navigator.clipboard.writeText(code).then(() => {
                const originalText = button.textContent;
                button.textContent = 'Copiado!';
                button.classList.add('copied');
                
                setTimeout(() => {
                    button.textContent = originalText;
                    button.classList.remove('copied');
                }, 2000);
            });
        }

        window.onclick = function(event) {
            if (event.target.classList.contains('modal')) {
                closeModal(event.target.id);
            }
        }

        document.addEventListener('keydown', function(event) {
            if (event.key === 'Escape') {
                closeModal('loadstringModal');
                closeModal('sourceModal');
            }
        });
    </script>
